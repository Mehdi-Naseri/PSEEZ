@model Pseez.Model.ViewModels.PseezEnt.Contact.UserContactListViewModel

<div class="modal-header alert-info">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove closePanel"></span></button>
    <h3 class="modal-title">ثبت دسترسی کاربر</h3>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">

            @Html.ValidationSummary(true)
            @Html.ValidationMessage("DuplicateRecord")
            <div class="form-group">
                @Html.LabelFor(model => model.ContactListName, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.DropDownListFor(model => model.ContactListName, ViewBag.ContactListNames as SelectList, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ContactListName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.UserName, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                        @Html.DropDownListFor(model => model.UserName, ViewBag.UserNames as SelectList, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.UserName)
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <span id="progress" class="text-center" style="display: none;">
            <img src="~/Content/Meh/Images/wait.gif" alt="wait" />
            در حال ارسال ...
        </span>

        <input class="btn btn-primary" type="submit" value="ذخیره" />
        <button class="btn btn-warning" data-dismiss="modal">بستن</button>
    </div>
}

