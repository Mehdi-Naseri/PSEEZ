<div class="modal-header alert-danger">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove"></span></button>
    <h3 class="modal-title">حذف کاربر از گروه</h3>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">

            <div class="form-group">
                @Html.Label("UserName", "نام کاربر", new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBox("UserName", (string)ViewBag.UserName1, new { @class = "form-control required", @disabled = "disabled" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("RoleName", "نام گروه", new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBox("RoleName", (string)ViewBag.RoleName1, new { @class = "form-control required", @disabled = "disabled" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-9 col-sm-offset-3">
                    <h3>
                        <span class="label label-danger">
                            آیا مایلید این مورد حذف گردد؟
                        </span>
                    </h3>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <input class="btn btn-danger" type="submit" value="بله" />
        <button class="btn btn-primary" data-dismiss="modal">خیر</button>
    </div>
}
