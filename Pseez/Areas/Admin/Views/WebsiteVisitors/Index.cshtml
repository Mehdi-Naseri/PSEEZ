@model IEnumerable<Pseez.DomainClasses.Models.PseezEnt.Management.WebsiteVisitor>

@{
    ViewBag.Title = "بازدید کنندگان وبسایت";
}

<h2>بازدید کنندگان وبسایت</h2>

<table class="table table-bordered table-striped table-hover table-condensed col-md-12" >
    <tr>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => model.Date).ToString() , "Index", new { SortPropertyName = "Date" })
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => model.HostAddress).ToString(), "Index", new { SortPropertyName = "HostAddress" })
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => model.HostName).ToString(), "Index", new { SortPropertyName = "HostName" })
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => model.Browser).ToString(), "Index", new { SortPropertyName = "Browser" })
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => model.Url).ToString(), "Index", new { SortPropertyName = "Url" })
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => model.UrlReferrer).ToString(), "Index", new { SortPropertyName = "UrlReferrer" })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HostAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HostName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Browser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UrlReferrer)
            </td>
            <td>
                @Html.ActionLink("تغییر", "Edit", new { id = item.Id }, new { @class = "btn btn-default" })
                @Html.ActionLink("جزییات", "Details", new { id = item.Id }, new { @class = "btn btn-default" })
                @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>

<button type="button" data-toggle="modal" data-target="#myModal" class="btn btn-danger">حذف همه داده ها </button>

@*Bootstrap Modal*@
<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <h3 class="modal-title alert-danger">حذف همه داده ها</h3>
            </div>
            <div class="modal-body">
                <p>آیا میخواهید کلیه داده ها حذف شوند؟</p>
            </div>
            <div class="modal-footer">
                @Html.ActionLink("تایید", "DeleteAll", null, new { @class = "btn btn-danger" })
                @*<button type="button" class="btn btn-danger">تایید</button>*@
            </div>
        </div>
    </div>
</div>
