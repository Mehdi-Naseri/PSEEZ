@using System.Globalization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Pseez</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @*جهت اضافه کردن استایلهاي جدید اضافه شده اند.*@
    @RenderSection("Styles", false)
    <link rel="shortcut icon" href="~/Content/Meh/Images/PseezLogo_Small.ico"/>
    <link href="~/Content/Meh/BootstrapRtl/bootstrap-rtl.min.css" rel="stylesheet"/>
    <link href="~/Content/Meh/MehRtLMenu.css" rel="stylesheet"/>
    <link href="~/Content/Meh/Meh.css" rel="stylesheet"/>
</head>
<body dir="rtl">
@if (User.Identity.IsAuthenticated)
{
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a class="navbar-brand" href="@Url.Action("Index", "Home", new {area = ""})">
                    <img src="~/Content/Meh/Images/PseezLogo_Small.png"/>
                </a>
                @*@Html.ActionLink('', "Index", "Home", null, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("خانه", "Index", "Home", new {area = ""}, null)</li>
                    <li class="dropdown">
                        <a href="" class="dropdown-toggle" data-toggle="dropdown">دیتا سنتر<span class="caret"></span> </a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("سرورها", "Index", "Servers", new {area = "DataCenter"}, null)</li>
                            <li>@Html.ActionLink("اتصال به سرورها", "Index", "ServerInformation", new {area = "DataCenter"}, null)</li>
                            <li>@Html.ActionLink("پشتیبانها", "Index", "Backup", new {area = "DataCenter"}, null)</li>
                            <li role="presentation" class="divider"></li>
                            <li>@Html.ActionLink("ابزارهای شبکه", "Index", "WebTools", new {area = "DataCenter"}, null)</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="" class="dropdown-toggle" data-toggle="dropdown">اکتیو دایرکتوری<span class="caret"></span> </a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("کاربران اکتیو دایرکتوری", "Index", "ActiveDirectoryUsers", new {area = "ActiveDirectory"}, null)</li>
                            <li>@Html.ActionLink("کامپیوترهای اکتیو دایرکتوری", "Index", "ActiveDirectoryComputers", new {area = "ActiveDirectory"}, null)</li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
}
@RenderSection("HomeBootstrapSlideshow", false)
<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer>
        @*<p>&copy; @DateTime.Now.Year - Pseez</p>*@
        <p class="text-center">
            PSEEZ&copy; -
            @Html.Raw((new PersianCalendar()).GetYear(DateTime.Now).ToString())

        </p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", false)
<script src="~/Scripts/Meh/MehJavaScript.js"></script>
</body>
</html>