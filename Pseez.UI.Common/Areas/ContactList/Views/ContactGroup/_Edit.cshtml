@model Pseez.ViewModels.ViewModels.PseezEnt.Common.ContactGroupViewModel

<div class="modal-header alert-info">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        <span class="glyphicon glyphicon-remove"></span>
    </button>
    <h3 class="modal-title">ویرایش گروه شماره تماس</h3>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">
            @Html.ValidationSummary(true)

            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(m => Model.Name, new {@class = "control-label col-sm-3"})
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Name, new {@class = "form-control"})
                    <div>
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => Model.Description, new {@class = "control-label col-sm-3"})
                <div class="col-sm-9">
                    @Html.TextAreaFor(m => m.Description, new {@class = "form-control"})
                    <div>
                        @Html.ValidationMessageFor(m => m.Description)
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <span id="progress" class="text-center" style="display: none;">
            <img src="~/Content/Meh/Images/wait.gif" alt="wait" />
            در حال ارسال ...
        </span>

        <input class="btn btn-primary" type="submit" value="ذخیره"/>
        <button class="btn btn-warning" data-dismiss="modal">بستن</button>
    </div>
}