@model Pseez.ViewModels.ViewModels.PseezEnt.Common.ContactViewModel

<div class="modal-header alert-info">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        <span class="glyphicon glyphicon-remove closePanel"></span></button>
    <h3 class="modal-title">ثبت شماره تماس جدید</h3>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">

            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => model.Name, new {@class = "control-label col-sm-3"})
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Tell, new {@class = "control-label col-sm-3"})
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.Tell, new {htmlAttributes = new {@class = "form-control col-sm-6", dir = "ltr"}})
                    @Html.ValidationMessageFor(model => model.Tell)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Comment, new {@class = "control-label col-sm-3"})
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.Comment, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.Comment)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ContactListName, new {@class = "control-label col-sm-3"})
                <div class="col-sm-9">
                    @Html.DropDownListFor(model => model.ContactListName, ViewBag.ContactListNames as SelectList, new {@class = "form-control"})
                    @Html.ValidationMessageFor(model => model.ContactListName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ContactGroupName, new {@class = "control-label col-sm-3"})
                <div class="col-sm-9">
                    @*@Html.DropDownListFor(model => model.ContactGroupName, ViewBag.ContactGroupNames as SelectList,  new { @class = "form-control" } )*@
                    <select class="form-control" id="ContactGroupName" name="ContactGroupName">
                        @*<option value="شرکت نفت ">شرکت نفت </option>*@
                        @Html.Raw(ViewBag.ContactGroupNames)
                    </select>
                    @Html.ValidationMessageFor(model => model.ContactGroupName)
                </div>
            </div>

        </div>
    </div>

    <div class="modal-footer">
        <span id="progress" class="text-center" style="display: none;">
            <img src="~/Content/Meh/Images/wait.gif" alt="wait" />
            در حال ارسال ...
        </span>

        <input class="btn btn-primary" type="submit" value="ذخیره"/>
        <button class="btn btn-warning" data-dismiss="modal">بستن</button>
    </div>
}