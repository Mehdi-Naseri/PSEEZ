@using System.Globalization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Pseez</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @*جهت اضافه کردن استایلهاي جدید اضافه شده اند.*@
    @RenderSection("Styles", false)
    <link rel="shortcut icon" href="~/Content/Meh/Images/PseezLogo_Small.ico"/>
    <link href="~/Content/Meh/BootstrapRtl/bootstrap-rtl.min.css" rel="stylesheet"/>
    <link href="~/Content/Meh/MehRtLMenu.css" rel="stylesheet"/>
    <link href="~/Content/Meh/Meh.css" rel="stylesheet"/>
</head>
<body dir="rtl">
@if (User.Identity.IsAuthenticated)
{
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a class="navbar-brand" href="@Url.Action("Index", "Home", new {area = ""})">
                    <img src="~/Content/Meh/Images/PseezLogo_Small.png"/>
                </a>
                @*@Html.ActionLink('', "Index", "Home", null, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("خانه", "Index", "Home", new {area = ""}, null)</li>

                    <li class="dropdown">
                        <a href="" class="dropdown-toggle" data-toggle="dropdown">اطلاعات پایه<span class="caret"></span> </a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("شهر", "Index", "City", new {area = "Personnel"}, null)</li>
                            <li>@Html.ActionLink("جنسیت", "Index", "Gender", new {area = "Personnel"}, null)</li>
                            <li>@Html.ActionLink("اشخاص", "Index", "Person", new {area = "Personnel"}, null)</li>
                            <li>@Html.ActionLink("استانها", "Index", "Province", new {area = "Personnel"}, null)</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="" class="dropdown-toggle" data-toggle="dropdown">کارمندان<span class="caret"></span> </a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("گروه خون", "Index", "BloodType", new {area = "Personnel"}, null)</li>
                            <li>@Html.ActionLink("مدارک تحصیلی", "Index", "DegreeState", new {area = "Personnel"}, null)</li>
                            <li>@Html.ActionLink("کارمند", "Index", "Employee", new {area = "Personnel"}, null)</li>
                            <li>@Html.ActionLink("مدرک دانشگاهی کارمند", "Index", "EmployeeAcademicalResume", new {area = "Personnel"}, null)</li>
                            <li>@Html.ActionLink("وضعیت تاهل کارمند", "Index", "EmployeeFamilialType", new {area = "Personnel"}, null)</li>
                            <li>@Html.ActionLink("چارت سازمانی کارمند", "Index", "EmployeeOrganChart", new {area = "Personnel"}, null)</li>
                            <li>@Html.ActionLink("وضعیت تاهل", "Index", "FamilialType", new {area = "Personnel"}, null)</li>
                            <li>@Html.ActionLink("چارت سازمانی", "Index", "OrganChart", new {area = "Personnel"}, null)</li>
                            <li>@Html.ActionLink("دین", "Index", "Religion", new {area = "Personnel"}, null)</li>
                            <li>@Html.ActionLink("واحد", "Index", "Unit", new {area = "Personnel"}, null)</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="" class="dropdown-toggle" data-toggle="dropdown">پروازها<span class="caret"></span> </a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("جدول زمانی", "Index", "TimeTable", new {area = "Personnel"}, null)</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">گزارشات<span class="caret"></span> </a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("پرسنل", "Index", "EmployeeDetail", new {area = "PersonnelReports"}, null)</li>
                            <li>@Html.ActionLink("پروازها", "Index", "Flights", new {area = "PersonnelReports"}, null)</li>
                        </ul>
                    </li>
                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
}
@RenderSection("HomeBootstrapSlideshow", false)
<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer>
        @*<p>&copy; @DateTime.Now.Year - Pseez</p>*@
        <p class="text-center">
            PSEEZ&copy; -
            @Html.Raw((new PersianCalendar()).GetYear(DateTime.Now).ToString())

        </p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", false)
<script src="~/Scripts/Meh/MehJavaScript.js"></script>
</body>
</html>