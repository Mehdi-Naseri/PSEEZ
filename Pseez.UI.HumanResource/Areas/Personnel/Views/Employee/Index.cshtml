@{
    ViewBag.Title = "کارمندان";
}

<h2>کارمندان</h2>


<div class="k-rtl">
    <div id="grid"></div>
</div>


@section Styles{
    <link href="~/Content/kendo/2015.1.318/kendo.common.min.css" rel="stylesheet"/>
    <link href="~/Content/kendo/2015.1.318/kendo.blueopal.min.css" rel="stylesheet"/>
    <link href="~/Content/kendo/2015.1.318/kendo.rtl.min.css" rel="stylesheet"/>
}
@section Scripts{
    <script src="~/Scripts/jszip/jszip.min-2.5.0.js"></script>
    <script src="~/Scripts/kendo/2015.1.318_Complete/kendo.all.min.js"></script>
    <script src="~/Scripts/kendo/KendoFarsi/kendo.fa-IR.js"></script>

    <script>
        kendo.culture("fa-IR");
    </script>
    <script>
        $(document).ready(function() {
            var GridDataSource = new kendo.data.DataSource({
                type: "json",
                transport: {
                    read: {
                        url: "@Url.Action("Read")",
                        dataType: "json",
                        type: "GET",
                        contentType: "application/json; charset=utf-8",
                    },
                    //parameterMap: function (options) {
                    //    return JSON.stringify(options);
                    //}
                },
                schema: {
                    model: {
                        id: "Id",
                        fields: {
                            Id: { type: "number", editable: false },
                            Code: { type: "number" },
                            CardId: { type: "number" },
                            CreationFileDate: { type: "number" },
                            PrimaryEmploymentDate: { type: "number" },
                            Native_Id: { type: "number" },
                            Religion_Id: { type: "number" },
                            EMail: { type: "string" },
                            BloodType_Id: { type: "number" },
                            CompanyType_Id: { type: "number" },
                            FamilyCardId: { type: "string" }
                        }
                    }
                },
                error: function(e) {
                    alert(e.errorThrown);
                },
                pageSize: 10
            });

            $("#grid").kendoGrid({
                dataSource: GridDataSource,
                autoBind: true,
                selectable: "row",
                navigatable: true,
                //height: 430,
                groupable: true,
                //scrollable: true,
                sortable: true,
                filterable: true,
                resizable: true,
                reorderable: true,
                pageable: {
                    refresh: true,
                    pageSizes: true,
                    input: true,
                    numeric: false
                },
                toolbar: [
                    //{ name: "Create", template: "<a class='k-grid-Create' data-modal=''><span class='btn btn-success'><span class='glyphicon glyphicon-plus'></span> سرور جدید </span></a>" },
                    { name: "excel", template: "<a class='k-grid-excel' style='margin-right:3px;float:left' ><span class='btn btn-success'><span class='k-icon k-i-excel'></span> خروجی اکسل </span></a>" },
                    //{ name: "pdf", template: "<a class='k-grid-pdf' style='float:left'><span class='btn btn-success'><span class='k-icon k-i-pdf'></span> خروجی pdf </span></a>" }
                ],
                columns: [
                    { field: "Id", title: "کد", width: "70px" },
                    { field: "Code", title: "کد کارمند" },
                    { field: "CardId", title: "کد کارت" },
                    { field: "CreationFileDate", title: "تاریخ ایجاد فایل" },
                    { field: "PrimaryEmploymentDate", title: "تاریخ استخدام اولیه" },
                    { field: "Native_Id", title: "کد ملیت" },
                    { field: "Religion_Id", title: "کد مذهب" },
                    { field: "EMail", title: "ایمیل" },
                    { field: "BloodType_Id", title: "کد گروه خونی" },
                    { field: "CompanyType_Id", title: "کد نوع شرکت" },
                    { field: "FamilyCardId", title: "کد کارت خوانوادگی" }
                ],
                excel: {
                    allPages: true
                },
            });
        });
    </script>
}